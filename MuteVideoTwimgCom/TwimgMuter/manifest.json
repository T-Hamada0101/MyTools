{
  "manifest_version": 3,
  "name": "Twimg Muter",
  "version": "1.0",
  "description": "video.twimg.comの動画を自動的にミュートします。",
  "content_scripts": [
    {
      "matches": [
        "https://video.twimg.com/*",
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}